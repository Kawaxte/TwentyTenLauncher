<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <artifactId>TwentyTenLauncher</artifactId>

  <build>
    <plugins>
      <plugin>
        <!-- https://mvnrepository.com/artifact/org.apache.maven.plugins/maven-shade-plugin -->
        <artifactId>maven-shade-plugin</artifactId>
        <configuration>
          <artifactSet>
            <includes>
              <include>org.json:json</include>
              <include>org.projectlombok:lombok</include>
            </includes>
          </artifactSet>
          <createDependencyReducedPom>false</createDependencyReducedPom>
          <minimizeJar>true</minimizeJar>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/maven/**</exclude>
                <exclude>META-INF/AL2.0</exclude>
                <exclude>META-INF/LGPL2.1</exclude>
                <exclude>META-INF/LICENSE</exclude>
                <exclude>META-INF/MANIFEST.MF</exclude>
              </excludes>
            </filter>
          </filters>
          <shadedArtifactAttached>true</shadedArtifactAttached>
          <transformers>
            <transformer
              implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
              <mainClass>com.github.kawaxte.twentyten.Launcher</mainClass>
            </transformer>
          </transformers>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>shade</goal>
            </goals>
            <phase>package</phase>
          </execution>
        </executions>
        <groupId>org.apache.maven.plugins</groupId>
        <version>3.4.1</version>
      </plugin>
      <plugin>
        <!-- https://mvnrepository.com/artifact/com.akathist.maven.plugins.launch4j/launch4j-maven-plugin -->
        <artifactId>launch4j-maven-plugin</artifactId>
        <configuration>
          <classPath>
            <mainClass>com.github.kawaxte.twentyten.Launcher</mainClass>
          </classPath>
          <errTitle>launch4j</errTitle>
          <headerType>gui</headerType>
          <icon>favicon.ico</icon>
          <jar>${project.build.directory}/${project.build.finalName}-shaded.jar</jar>
          <jre>
            <path>${java.home}</path>
            <minVersion>1.8.0</minVersion>
          </jre>
          <downloadUrl>https://www.java.com/download/ie_manual.jsp</downloadUrl>
          <supportUrl>https://www.java.com/download/support.jsp</supportUrl>
          <messages>
            <jreNotFoundErr>Java Runtime Environment could not be found.</jreNotFoundErr>
            <jreVersionErr>This application requires Java Runtime Environment</jreVersionErr>
            <launcherErr>An error occurred while launching the application.</launcherErr>
            <startupErr>An error occurred while starting the application.</startupErr>
          </messages>
          <outfile>${project.build.directory}/${project.artifactId}.exe</outfile>
          <priority>high</priority>
          <versionInfo>
            <language>ENGLISH_UK</language>
          </versionInfo>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <id>l4j-clui</id>
            <phase>package</phase>
          </execution>
        </executions>
        <groupId>com.akathist.maven.plugins.launch4j</groupId>
        <version>2.3.3</version>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- https://mvnrepository.com/artifact/org.json/json -->
    <dependency>
      <artifactId>json</artifactId>
      <groupId>org.json</groupId>
      <version>20230227</version>
    </dependency>
    <!-- https://mvnrepository.com/artifact/org.projectlombok/lombok -->
    <dependency>
      <artifactId>lombok</artifactId>
      <groupId>org.projectlombok</groupId>
      <scope>provided</scope>
      <version>1.18.26</version>
    </dependency>
  </dependencies>
  <groupId>com.github.kawaxte.ttl</groupId>
  <modelVersion>4.0.0</modelVersion>

  <properties>
    <maven.compiler.source>8</maven.compiler.source>
    <maven.compiler.target>8</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <repositories>
    <repository>
      <id>scijava.public</id>
      <url>https://maven.scijava.org/content/repositories/public/</url>
    </repository>
  </repositories>
  <version>20230330</version>
  <description>${project.artifactId}</description>
  <organization>
    <name>XTE</name>
    <url>https://github.com/Kawaxte</url>
  </organization>
  <inceptionYear>2022</inceptionYear>

</project>